page {
    height: 100%;
}
.container {
    position: relative;

    height: 100%;

    font-family: "Helvetica Neue", "Hiragino Sans GB", "WenQuanYi Micro Hei", "Microsoft Yahei", sans-serif;
    font-size: 28rpx;

    color: #333;
}
view {
    box-sizing: border-box;
}
.button-wrapper {
    position: fixed;
    bottom: 0;

    padding: 0 40rpx 20rpx;
    width: 100%;

    background-color: rgba(255, 255, 255, .8);
}
.button {
    border: none;
    width: 100%;
    height: 40px;

    font-size: 13px;
    line-height: 3;

    color: #fff;
    background-color: #4facf7;
}
